<h1>Books</h1>

<table>
	<thead>
	  <tr>
	  <th>Title</th>
	  <th>Body</th>
	  <th></th>
	 </tr>
   </thead>
   <tbody>
   <% @books.each do |book| %>
   	<tr>
   	  <td><%= book.title %></td>
   	  <td><%= book.body %></td>
   	  <td><%= link_to "Show", book_path(@book.id) %></td>
   	  <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
   	  <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?"ã€€%></td>
   	</tr>
   </tbody>
  <% end %>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>

<%= flash[:notice] %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book'%>

<% end %>